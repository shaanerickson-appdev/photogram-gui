<h1>Photo Details</h1>
<dl>
  <dt>Image</dt>
  <dd><img src=<%= @photo.image %>></dd>
  <dt>Caption</dt>
  <dd><p><%= @photo.caption %></p></dd>
  <dt>Owner</dt>
  <dd><%= @photo.poster.username %></dd>
  <dt>Posted</dt>
  <dd><%= @photo.created_at %></dd>
  <dt>Edit photo</dt>
  <dd>
    <form action="/edit_photo/<%=@photo.id%>">
      <label for="image">Image</label>
      <input id="image" type="text" name="image_url" placeholder="Enter a URL" value="<%= @photo.image %>">
      <label for="caption">Caption</label>
      <textarea id="caption" name="image_caption" placeholder="Enter a caption..."><%= @photo.caption %></textarea>
      <button>Update photo</button>
    </form>
  </dd>
  <dt>Delete photo</dt>
  <dd><a href="/delete_photo/<%=@photo.id%>">Delete this photo</a></dd>
</dl>
<h2>Comments</h2>
<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @photo.comments.order({ :created_at => :desc }).each do |comment| %>
  <tr>
    <td><%= comment.commenter.username %></td>
    <td><%= comment.body %></td>
    <td><%= comment.created_at %></td>
  </tr>
  <% end %>
</table>
<h3>Add a new comment</h3>
<form action="/new_comment">
  <label for="photo_id">Photo ID</label>
  <input id="photo_id" name="photo_id" type="text" placeholder="Enter a photo ID..." value="<%=@photo.id%>">
  <label for="commenter_id">Author ID</label>
  <input id="commenter_id" name="commenter_id" type="text">
  <label for="body">Comment</label>
  <textarea id="body" name="body" placeholder="Enter a comment"></textarea>
  <button>Add comment</button>
</form>
